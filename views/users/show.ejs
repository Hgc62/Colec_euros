<h1>
    Usuario:
</h1>

<ul>
    <li>
        Nombre del usuario:
        <b><%= user.nombre %></b>
    </li>

    <li>
        Administrador:
        <b><%= user.esAdmin ? "Yes" : "No" %></b>
    </li>

    <p>
        <a href="/users/<%= user.id %>/edit" class="button">Edit</a>

        <a href="/users/<%= user.id %>?_method=DELETE"
           onClick="return confirm('Delete user: <%= user.nombre %>');"
           class="button">Delete</a>
    </p>

<a href="/goback" class="button">Volver</a>

